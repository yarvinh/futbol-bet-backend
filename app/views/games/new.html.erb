<script>
var handleOnChange = (e)=>{
  e.target.form.submit()
}
      

</script>
<%p"Testing league", @league%>
<%=form_with(url: "/search_league_teams" , method: :get, class: "standar-form", remote: true) do |f| %>
    <%= f.label :league %>
    <%= f.collection_select :league_id, League.all, :id , :name ,{:include_blank => 'Please Select'}, onchange: 'handleOnChange(event)', style: "margin-bottom: 1rem;"%> 
<%end%>

<%=render "form", game: @game, league: @league %>
<%= link_to "Back to game", games_path , class: "standar_links" , style: "width: 160px"%>