<div class="box-shadow">
   <div class="card-header">
        <h3>
            <%= game.status%>
        </h3>
        <p> Date: <%= game.date %>
        Time: <%= game.time %> </p>
    </div>

    <%if game.team_events[0].points === 0 && game.team_events[1].points === 0 && game.pending%>
    <div class="select-winner">
        <%game.team_events.each do |event| %>
              <%= button_to event.team.fc, {:controller => :team_events, :action => 'update', :id => event.id }, :method => :patch, class: "blue-btn" %>
            <% end %>
            <%= button_to "Tie  ", {:controller => :games, :action => 'close_event', :id => game.id }, :method => :patch , class: "standar-button"%>
        <% else%>
    </div>
    <%= button_to "Reset Result", {:controller => :team_events, :action => 'reset_event', :game_id => game.id }, :method => :patch , class: "standar-button"%>
    <%end%>
    <%= button_to "delete", {:controller => :games, :action => 'destroy', :id => game.id }, :method => :delete , class: "standar-button"%>
</div>